<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/regular_padding"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/regular_padding"
    tools:context="com.biniisu.leanrss.ui.base.FeedbinLoginActivity">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/loginToFeedBin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/feedbin_logo_dark" />

    <RelativeLayout
        android:id="@id/loginToFeedBin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/loginToFeedBinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"

            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/feedWranglerEmailEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginToFeedBinTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:hint="@string/feedbin_email_hint"
            android:inputType="textEmailAddress" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/feedwranglerPasswordEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedWranglerEmailEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:hint="@string/feedbin_psswd_hint"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/loginToFeedWranglerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedwranglerPasswordEditText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/outlined_button_drawable"
            android:text="@string/feedbin_signin_button_text" />
        <!--delete below button after testing -->
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginToFeedWranglerButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/outlined_button_drawable"
            android:text="Decrypt" />
    </RelativeLayout>

</RelativeLayout>
