<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:background="?selectableItemBackground"
    >


    <RelativeLayout
        android:id="@+id/fontShowCaseContainer"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/reading_appearance_font_chooser_bg">


        <TextView
            android:id="@+id/fontShowCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="aA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/fontName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fontShowCaseContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textAlignment="center"
        android:maxLines="1"
        android:text="Open Sans"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header" />

</RelativeLayout>
