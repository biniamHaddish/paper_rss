<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/navigation_item_drawable_bg"
    android:paddingLeft="@dimen/small_padding"
    android:paddingRight="16dp">


    <RelativeLayout
        android:id="@+id/expandTag"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigationItemIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_bg"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/navigationItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/regular_padding"
        android:layout_marginStart="@dimen/regular_padding"
        android:layout_toEndOf="@id/expandTag"
        android:layout_toStartOf="@+id/navigationItemUnreadCount"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/local_account_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
        android:textColor="@color/list_primary_text_color"
        android:textSize="@dimen/regular_font_size" />


    <TextView
        android:id="@+id/navigationItemUnreadCount"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/regular_padding"
        android:paddingTop="2dp"
        android:text="16"
        android:backgroundTint="@color/white_gray_to_mine_shaft"
        android:background="@drawable/awesome_round_rect"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
        android:textColor="@color/orange500" />

</RelativeLayout>